<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="64dp">

    <!-- Drag Handle -->
    <ImageView
        android:id="@+id/drag_handle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_reorder_grey_500_24dp"
        android:contentDescription="@string/drag_to_reorder"
        android:layout_marginRight="16dp" />

    <!-- Key Information -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ssh_key_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?android:attr/textColorPrimary"
            tools:text="My SSH Key" />

        <TextView
            android:id="@+id/ssh_key_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="2dp"
            tools:text="RSA 2048-bit" />

        <TextView
            android:id="@+id/ssh_key_fingerprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="2dp"
            android:fontFamily="monospace"
            tools:text="SHA256:abcd1234..." />

    </LinearLayout>

    <!-- Remove Button -->
    <ImageButton
        android:id="@+id/btn_remove_ssh_key"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_close_grey_24dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/remove_ssh_key"
        android:padding="12dp" />

</LinearLayout>